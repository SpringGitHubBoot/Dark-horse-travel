<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhang.dao.CheckItemDao">

    <insert id="addCheckItem" parameterType="com.zhang.entity.CheckItem">
        INSERT INTO t_checkitem VALUES
         (NULL,#{code} ,#{name} ,#{sex} ,#{age} ,#{price} ,#{type} ,#{attention} ,#{remark} );
    </insert>

    <select id="selectPageData" parameterType="string" resultType="com.zhang.entity.CheckItem">
        select * from t_checkitem
        <if test="value != null and value !=''">
            WHERE code = #{value} or name like "%${value}%"
        </if>
    </select>

    <select id="selectCheckItemIDInCC" parameterType="int" resultType="java.lang.Integer">
         SELECT COUNT(0) FROM t_checkgroup_checkitem WHERE checkitem_id = #{id} ;
    </select>

    <select id="selectCheckItemById" parameterType="int" resultType="com.zhang.entity.CheckItem">
        SELECT * FROM t_checkitem WHERE id = #{id} ;
    </select>

    <delete id="deleteCheckItemById" parameterType="int">
        DELETE FROM t_checkitem WHERE id = #{id} ;
    </delete>

    <update id="updateCheckItem" parameterType="com.zhang.entity.CheckItem">
        UPDATE t_checkitem
        <set>
            <if test="code != null and code != ''">
                code = #{code} ,
            </if>
            <if test="name != null and name != ''">
                name = #{name} ,
            </if>
            <if test="sex != null and sex != ''">
                sex = #{sex} ,
            </if>
            <if test="age != null and age != ''">
                age = #{age} ,
            </if>
            <if test="price != null and price != ''">
                price = #{price} ,
            </if>
            <if test="type != null and type != ''">
                type = #{type} ,
            </if>
            <if test="attention != null and attention != ''">
                attention = #{attention} ,
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark} ,
            </if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <select id="selectAllCheckItem" resultType="com.zhang.entity.CheckItem">
        SELECT * FROM t_checkitem
    </select>

